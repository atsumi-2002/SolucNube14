<%- include('layout/header') %>

<div class="container">
    <div class="card" style="width: 38rem;">
        <div class="card-body">
            <h5 class="card-title">Agregar Alumno</h5>
            <form action="/alumnos/create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputFirstName">Nombres</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Nombre de alumno" required>
                  </div>
                <div class="form-group">
                  <label for="exampleInputLastName">Apellidos</label>
                  <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Apellido de alumno" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputBirth">Nacimiento</label>
                    <input type="date" class="form-control" id="birth" name="birth" placeholder="Nacimiento de alumno" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPhoneNumber">Nº Celular</label>
                    <input type="number" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Número de celular" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPhoneNumber">Brebe introducción</label>
                    <textarea name="description" class="form-control" id="description" name="description" rows="5" required></textarea>
                </div>
                <div class="custom-file">
                    <label class="custom-file-label" for="photoUser">Escoge Imagen...</label>
                    <input type="file" accept="image/png, image/jpeg" class="form-control" id="file" name="file" required>
                    <div class="invalid-feedback">Archivo invalido</div>
                </div>

                <div class="button-container">
                    <br>
                    <button type="submit" class="btn btn-primary mb-2">Agregar</button>
                    <br>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('layout/footer') %>