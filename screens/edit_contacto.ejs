<%- include('layout/header') %>

<div class="container">
    <div class="card" style="width: 38rem;">
        <div class="card-body">
            <h5 class="card-title">Cambiar dato del contacto <%= contacto.firstName %></h5>
            <form action="/edit/<%= contacto._id %>?_method=PUT" method="post" id="add-form" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputFirstName">Nombre</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" value="<%= contacto.firstName %>" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputLastName">Apellido</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" value="<%= contacto.lastName %>" required>
                </div>
                <div class="form-group">
                    <label for="exampleDescription">NÂº Celular</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= contacto.phoneNumber %>" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contacto.email %>" required>
                </div>
                <div class="custom-file">
                    <label class="custom-file-label" for="photoUser">imagen</label>
                    <input type="file" accept="image/png, image/jpeg" class="form-control" id="file" name="file">
                    <div class="invalid-feedback">Documento no valido</div>
                    <img src="<%= contacto.photoUser %>" class="img-thumbnail mt-1" width="100">
                </div>
                <input type="hidden" name="photoUserName" id="photoUserName" value="<%= contacto.photoUserName %>">
                <input type="hidden" name="old_image" id="old_image" value="<%= contacto.photoUser %>">

                <div class="button-container">
                    <br>
                    <button type="submit" class="btn btn-primary mb-2">Click para editar</button>
                    <br>
                    <a href="/" class="btn btn-danger mb-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('layout/footer') %>